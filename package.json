{
  "name": "@inksafari/engawa",
  "description": "Personal blog boilerplate for @inksafari. Built in Svelte using Kit.",
  "version": "0.0.0-development",
  "private": true,
  "license-template": "Beerware",
  "license-posts": "CC BY-NC-SA 4.0",
  "license-assets": "All graphic assets are copyright to their respective owners.",
  "author": "TY Lin[@inksafari] (https://inksafari.net)",
  "homepage": "https://github.com/inksafari/engawa",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inksafari/engawa.git"
  },
  "bugs": {
    "url": "https://github.com/inksafari/engawa/issues"
  },
  "scripts": {
    "===== development =====": "",
    "postinstall": "svelte-kit sync",
    "fonts:mv": "cp -Lr node_modules/@fontsource static/fonts",
    "clear": "rm -rf .svelte-kit build",
    "cjk": "sh ./fontSubset.sh",
    "dev": "run-s clear postinstall dev:site",
    "dev:site": "vite dev --host",
    "===== linting & formatting =====": "",
    "count": "find content/ | grep '[.]md' | xargs wc -w",
    "lint:spell": "cspell content/*",
    "lint": "npx lefthook run lint",
    "lint:eq": "vale content/*.md",
    "lint:keys": "secretlint '**/*'",
    "lint:a11y": "pa11y-ci --config ./config/pa11y.json",
    "check": "svelte-check --tsconfig ./tsconfig.json --diagnostic-sources \"js,ts,svelte\" ",
    "fmt:check": "dprint check",
    "fmt": "dprint fmt --verbose",
    "lint:css": "stylelint --config ./config/stylelint.config.cjs src/**/*.{scss,css,pcss}",
    "lint:js": "eslint --ignore-path .eslintignore src/**/*.{js,ts,svelte}",
    "fix:css": "stylelint --fix --config ./config/stylelint.config.cjs src/**/*.{scss,css,pcss}",
    "fix:js": "eslint --fix --report-unused-disable-directives --ignore-path .eslintignore \"src/**/*.{js,ts,svelte}\"",
    "===== testing =====": "",
    "story:dev": "histoire dev",
    "story:build": "histoire build",
    "perf": "node scripts/getMetrics.mjs",
    "test:e2e": "playwright test --headed",
    "test:e2e:ci": "playwright test --browser all",
    "test:unit": "vitest run",
    "test:unit:clean": "vitest clean cache",
    "test:unit:watch": "vitest --watch",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "===== build =====": "",
    "build:svg": "find ./src ./static -name '*.svg' -print0 | xargs -0 -P16 -L20 npx svgo",
    "build:styles:print": "sass src/styles/print.scss static/print.css --no-source-map --style=compressed",
    "build:styles:rss": "sass src/styles/rss.scss static/rss.css --no-source-map --style=compressed",
    "build:index": "pagefind",
    "build": "run-s clear postinstall build:site build:index",
    "build:site": "vite build",
    "build:preview": "vite preview --host",
    "serve": "run-s build build:preview",
    "===== deployment =====": "",
    "notify:sitemap": "curl http://www.google.com/ping?sitemap=https://example.com/sitemap.xml",
    "df": "run-s build deploy:firebase",
    "deploy:firebase": "firebase deploy --only hosting",
    "deploy:local": "firebase emulators:start",
    "deploy:stage": "firebase hosting:channel:deploy tel --expires 1h"
  },
  "dependencies": {
    "@rive-app/canvas": "^1.0.97",
    "@sveltejs/kit": "^1.0.1",
    "date-fns": "^2.29.3",
    "rfs": "^9.0.6"
  },
  "devDependencies": {
    "@akebifiky/remark-simple-plantuml": "^1.0.2",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@fxts/core": "^0.11.0",
    "@histoire/plugin-svelte": "^0.12.4",
    "@html-eslint/eslint-plugin": "^0.15.0",
    "@html-eslint/parser": "^0.15.0",
    "@minify-html/node": "^0.10.3",
    "@playwright/test": "^1.29.1",
    "@secretlint/secretlint-rule-preset-recommend": "^5.3.0",
    "@sveltejs/adapter-static": "^1.0.0",
    "@sveltejs/vite-plugin-svelte": "^2.0.2",
    "@types/js-yaml": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "@vitest/coverage-c8": "^0.26.2",
    "@vitest/ui": "^0.26.2",
    "@xmldom/xmldom": "^0.8.6",
    "cspell": "^6.18.0",
    "eslint": "^8.30.0",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-no-unsanitized": "^4.0.2",
    "eslint-plugin-security": "^1.5.0",
    "fenceparser": "^2.2.0",
    "fractils": "^3.1.0",
    "hastscript": "^7.1.0",
    "histoire": "^0.12.4",
    "js-yaml": "^4.1.0",
    "jsdom": "^20.0.3",
    "lefthook": "^1.2.6",
    "lunarphase-js": "^1.0.10",
    "mdast-util-to-hast": "^12.2.4",
    "mdast-util-to-string": "^3.1.0",
    "mdsvex": "^0.10.6",
    "mdsvex-relative-images": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "open-props": "^1.5.3",
    "outdent": "^0.8.0",
    "pagefind": "^0.10.6",
    "partial-hydration-sk": "^1.3.0",
    "postcss": "^8.4.20",
    "postcss-grid-kiss": "^3.1.0",
    "postcss-html": "^1.5.0",
    "postcss-jit-props": "^1.0.8",
    "postcss-lightningcss": "^0.6.0",
    "postcss-load-config": "^4.0.1",
    "postcss-scss": "^4.0.6",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-external-links": "^2.0.1",
    "rehype-slug": "^5.1.0",
    "rehype-title-figure": "^0.1.2",
    "remark-pangu": "^2.2.0",
    "sass": "^1.57.1",
    "secretlint": "^5.3.0",
    "shiki-twoslash": "^3.1.0",
    "stylelint": "^14.16.0",
    "stylelint-config-css-modules": "^4.1.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-csstree-validator": "^2.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.6.0",
    "stylelint-high-performance-animation": "^1.7.0",
    "stylelint-no-unsupported-browser-features": "^6.0.1",
    "svelte": "^3.55.0",
    "svelte-check": "^3.0.1",
    "svelte-eslint-parser": "^0.22.2",
    "svelte-intersection-observer": "^0.10.0",
    "svelte-preprocess": "^5.0.0",
    "transliteration": "^2.3.5",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4",
    "unist-util-is": "^5.1.1",
    "unist-util-visit": "^4.1.1",
    "vanilla-lazyload": "^17.8.3",
    "vite": "^4.0.3",
    "vite-plugin-image-presets": "^0.3.3",
    "vitest": "^0.26.2",
    "zod": "^3.20.2"
  },
  "engines": {
    "node": "^16.14 || >=18",
    "pnpm": ">=7.18.0 <8.0.0"
  },
  "volta": {
    "node": "19.3.0"
  },
  "browserslist": [
    "cover 80% in alt-AS",
    "maintained node versions",
    "Firefox ESR",
    "not dead",
    "iOS >= 13"
  ],
  "sideEffects": false,
  "type": "module"
}
